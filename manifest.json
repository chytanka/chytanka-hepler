{
    "manifest_version": 3,
    "name": "__MSG_extensionName__",
    "version": "1.1",
    "default_locale": "en",
    "description": "Extension to add Chytanka button next to chapters",
    "permissions": [],
    
    "content_scripts": [
        {
            "matches": [
                "https://mangadex.org/*"
            ],
            "js": [
                "content-common.js",
                "content-mangadex.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://imgur.com/*"
            ],
            "js": [
                "content-common.js",
                "content-imgur.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://zenko.online/*"
            ],
            "js": [
                "content-common.js",
                "content-zenko.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://comick.io/*"
            ],
            "js": [
                "content-common.js",
                "content-comick.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://*.reddit.com/*"
            ],
            "js": [
                "content-common.js",
                "content-reddit.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        },
        {
            "matches": [
                "https://*.imgchest.com/*"
            ],
            "js": [
                "content-common.js",
                "content-imgchest.js"
            ],
            "css": [
                "styles.css"
            ],
            "run_at": "document_idle"
        }
    ]
}